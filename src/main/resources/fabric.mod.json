{
  "schemaVersion": 1,
  "id": "mapfrontiers",
  "version": "${version}",

  "name": "MapFrontiers",
  "description": "This mod is an addon for Journey Map that allows you to divide the map into regions and assign them names and colors.",
  "authors": [
    "Alejandro Coria (MemeSapiens)"
  ],
  "contact": {
    "homepage": "https://alejandrocoria.games/projects/MapFrontiers/",
    "sources": "https://github.com/alejandrocoria/MapFrontiers"
  },

  "license": "MIT License",
  "icon": "logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "games.alejandrocoria.mapfrontiers.MapFrontiers"
    ],
    "client": [
      "games.alejandrocoria.mapfrontiers.client.ClientProxy"
    ],
    "journeymap": [
      "games.alejandrocoria.mapfrontiers.client.plugin.MapFrontiersPlugin"
    ]
  },
  "mixins": [
    "mapfrontiers.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
